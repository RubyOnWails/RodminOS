# Rodmin OS Host Recipe
# Used by the build system to resolve host-side dependencies

NAME="rodmin-host-tools"
VERSION="1.0.0"

DEPENDENCIES=(
    "nasm"
    "mtools"
    "xorriso"
    "gnu-tar"
)

function install_dependencies() {
    echo "Checking host dependencies..."
    for dep in "${DEPENDENCIES[@]}"; do
        if ! command -v $dep &> /dev/null; then
            echo "Error: $dep is not installed on host."
            exit 1
        fi
    done
}

install_dependencies
